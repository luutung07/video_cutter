<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dimen_56">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/llHeaderViewLeft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/ivHeaderViewLeftIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?selectableItemBackground"
            android:padding="@dimen/dimen_10"
            android:src="@drawable/ic_back"
            android:visibility="gone"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/tvHeaderViewLeftLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/fbase_font_regular"
            android:padding="@dimen/dimen_14"
            android:textColor="@color/black"
            android:textSize="@dimen/dimen_text_size_18"
            android:visibility="gone"
            tools:text="Left"
            tools:visibility="visible" />

    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/llHeaderViewCenter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?selectableItemBackground"
        android:gravity="center"
        android:padding="@dimen/dimen_10"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tvHeaderViewCenterLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/fbase_font_bold"
            android:textColor="@color/black"
            android:textSize="@dimen/dimen_text_size_18"
            android:visibility="gone"
            tools:text="Center"
            tools:visibility="visible" />

        <ImageView
            android:id="@+id/ivHeaderViewCenterIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_10"
            android:layout_marginTop="@dimen/dimen_2"
            android:src="@drawable/ic_arrow_down"
            android:visibility="gone"
            tools:visibility="visible" />

    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/llHeaderViewRight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/ivHeaderViewRightIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/dimen_6"
            android:src="@drawable/ic_camera"
            android:visibility="gone"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/tvHeaderViewRightLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/fbase_font_regular"
            android:padding="@dimen/dimen_14"
            android:textColor="@color/black"
            android:textSize="@dimen/dimen_text_size_18"
            tools:text="Right" />

    </androidx.appcompat.widget.LinearLayoutCompat>

    <View
        android:id="@+id/vHeaderViewDivider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_1"
        android:background="@color/black"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
