<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dimen_48"
    android:background="@drawable/shape_stroke_color_1_corner_4">

    <View
        android:id="@+id/vTabSelectCenter"
        android:layout_width="@dimen/dimen_1"
        android:layout_height="match_parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvTabSelectLeft"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/shape_bg_color_1_corner_left_4"
        android:fontFamily="@font/fbase_font_regular"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="@dimen/dimen_text_size_14"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/vTabSelectCenter"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Text Left" />

    <TextView
        android:id="@+id/tvTabSelectRight"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fontFamily="@font/fbase_font_regular"
        android:gravity="center"
        android:textColor="@color/color_1"
        android:textSize="@dimen/dimen_text_size_14"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/vTabSelectCenter"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Text Right" />

</androidx.constraintlayout.widget.ConstraintLayout>
