<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:clickable="true"
    android:focusable="true"
    android:layout_marginHorizontal="@dimen/dimen_30"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:id="@+id/llTrimVideoViewFrame"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dimen_50"
        android:background="@color/black"
        android:orientation="horizontal"
        android:paddingHorizontal="@dimen/dimen_20"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
    </LinearLayout>

    <com.example.videocutter.presentation.widget.cut.ver2.TrimViewVer2
        android:id="@+id/trimViewVideo"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_gravity="center"
        tools:background="@color/red"
        app:layout_constraintBottom_toBottomOf="@+id/llTrimVideoViewFrame"
        app:layout_constraintEnd_toEndOf="@+id/llTrimVideoViewFrame"
        app:layout_constraintStart_toStartOf="@+id/llTrimVideoViewFrame"
        app:layout_constraintTop_toTopOf="@+id/llTrimVideoViewFrame" />

</androidx.constraintlayout.widget.ConstraintLayout>
